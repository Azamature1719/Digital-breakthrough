<!DOCTYPE html>
@using SolveITMail.Models
@model CAuthorizationData
@{
	Layout = "OnLogLayout";
}
<html>
    <head>
        <style type="text/css">
			.center { text-align:center; }
			label.header { font-size: 32pt;  }
			input.send {  font-size:12pt; background-color: #0055A6; color: white; width: 140px; height: 40px; border: 1px solid black; border-radius: 4px }
			input.fromUser { line-height:22pt; width: 450px; font-size: 14pt }
		</style>
    </head>
    <body>
        <div class="FullScreen">
			<div class="VerticallAlign">
				<div class="HorizontalAlign">
					@using(Html.BeginForm("Login", "Home", FormMethod.Post))
					{
						<div class="center">
							@Html.Label("LoginHeader", "Вход", new { @class="header" }) <p>
							@Html.TextBoxFor(m=>m.Login, new { @class="fromUser", placeholder="Эл. почта или телефон +7-xxx-xxx-xx-xx"}) <p>
							@Html.PasswordFor(m=>m.Password, new { @class="fromUser", placeholder="Пароль" }) <p>
							<input type="submit" value="Войти" class="send" />
						</div>
					}
				</div>
			</div>
		</div>
    </body>
</html>
