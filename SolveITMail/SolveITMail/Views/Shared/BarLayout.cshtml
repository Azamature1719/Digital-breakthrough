<!DOCTYPE HTML>
<html>
<head>
	<link rel="stylesheet" href="~/Styles/styles.css">
	<script src="~/Scripts/jquery-2.1.1.min.js"></script>
</head>

<body >

	<!-- MENU BAR -->

	<script type="text/javascript">
		$(document).ready(function() {
			var is_open = false;

			$(".but-menu").on("click", function() {
				//open side bar & set buts width

				if(!is_open) {

					$("#modal").fadeIn(150);
					$(".side-bar").css({
						"width": "350px",
						"transition": "0.25s"
					});
					$(".menu-controls").css({
						"width": "100%",
						"margin-left": "0px",
						"transition": "0.25s"
					});
					setTimeout(function() {
						$(".side-bar .menu-controls span").css("display", "inline-block");
					}, 250);
					is_open = !is_open;

					} else {

						$(".side-bar .menu-controls span").css("display", "none");
						$(".side-bar").css({
						"width": "100px",
						"transition": "0.25s"
						});
						$(".menu-controls").css({
							"width": "80px",
							"margin-left": "10px",
							"transition": "0.25s"
						});
						$("#modal").fadeOut(150);
						is_open = !is_open;
				}
			});
		});
	</script>

	<div id = "modal"></div>
	<div class = "side-bar">
				
	<div class = "menu-controls but-menu">
		<a href = "#" id = "menuHam"></a>
	</div>

	<div class = "menu-controls but-stories">
		<a href = "#" id = "stories"></a>
		<span>истории</span>
	</div>
		<div class = "menu-controls but-target">
		<a href = "#" id = "target"></a>
		<span>персональные<br>предложения</span>
	</div>
	<div class = "menu-controls but-templates">
		<a href = "#" id = "templates"></a>
		<span>мои шаблоны</span>
	</div>

	</div>

	<!-- /MENU BAR -->
	<div style="margin-left:100px; margin-top:10px">@RenderBody()</div>
</body>

</html>